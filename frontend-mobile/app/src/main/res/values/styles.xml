<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnimatedCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/animated_checkbox</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
    </style>
    <style name="MicrosoftButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">64dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">14dp</item>
        <item name="iconSize">20dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>
</resources>