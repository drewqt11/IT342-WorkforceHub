<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo_without_background_with_quote"
            android:contentDescription="Workforce Hub Logo"
            android:scaleType="fitCenter"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"/>
    <View
        android:id="@+id/bottomCurveBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bottom_curve_background"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintWidth_percent="1.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonGuidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="LOGIN"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        android:stateListAnimator="@animator/button_state_list_anim"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toTopOf="@+id/signupButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/signupButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="SIGN UP"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        android:stateListAnimator="@animator/button_state_list_anim"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toTopOf="@id/buttonGuidelineBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 