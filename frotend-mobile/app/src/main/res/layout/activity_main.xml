<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context="com.example.myapplication.MainActivity">

    <!-- Decorative elements -->
    <View
        android:id="@+id/decorativeCircle1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/gradient_blue_circle"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main ScrollView to make content scrollable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbarSize="4dp"
        android:fadeScrollbars="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Decorative circle that needs to be inside scroll container for proper positioning -->
            <View
                android:id="@+id/decorativeCircle2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="-32dp"
                android:layout_marginBottom="-32dp"
                android:background="@drawable/gradient_teal_circle"
                android:alpha="0.7"
                app:layout_constraintEnd_toEndOf="@+id/mainContentContainer"
                app:layout_constraintBottom_toBottomOf="@+id/mainContentContainer" />

            <!-- Main Content Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainContentContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_margin"
                android:layout_marginEnd="@dimen/content_margin"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_max="@dimen/max_width_default">

                <!-- Logo and Header -->
                <FrameLayout
                    android:id="@+id/logoContainer"
                    android:layout_width="@dimen/logo_container_size"
                    android:layout_height="@dimen/logo_container_size"
                    android:background="@drawable/circle_shadow_background"
                    android:padding="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/logo_size"
                        android:layout_height="@dimen/logo_size"
                        android:layout_gravity="center"
                        android:src="@drawable/logo_with_no_text"
                        android:contentDescription="Workforce Hub Logo" />
                </FrameLayout>

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="WORKFORCE HUB"
                    android:textColor="#1F2937"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logoContainer" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ENTERPRISE PORTAL"
                    android:textColor="#6B7280"
                    android:textSize="@dimen/subtitle_text_size"
                    android:letterSpacing="0.15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleText" />

                <!-- Auth Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/authCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subtitleText">

                    <!-- Card Header with gradient -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_blue_teal"
                            android:gravity="center"
                            android:paddingVertical="12dp"
                            android:text="Enterprise Authentication"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/button_text_size" />

                        <!-- Card Body -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:padding="@dimen/card_padding">

                            <!-- Subtle background pattern -->
                            <View
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="-16dp"
                                android:layout_marginTop="-16dp"
                                android:background="@drawable/circle_border_teal"
                                android:alpha="0.05" />

                            <View
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="-16dp"
                                android:layout_marginBottom="-16dp"
                                android:background="@drawable/circle_border_blue"
                                android:alpha="0.05" />

                            <TextView
                                android:id="@+id/welcomeTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Welcome to Workforce Hub"
                                android:textColor="#1F2937"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/welcomeSubtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/welcomeTitle"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="Access your enterprise dashboard securely with Microsoft"
                                android:textColor="#6B7280"
                                android:textSize="14sp" />

                            <!-- Microsoft Sign In Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/microsoftCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/welcomeSubtitle"
                                android:layout_marginTop="24dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#E5E7EB"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="16dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical">

                                            <FrameLayout
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:background="#f3f4f6"
                                                android:gravity="center">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_gravity="center"
                                                    android:src="@drawable/microsoft_white_logo"
                                                    android:contentDescription="Microsoft Logo" />
                                            </FrameLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="12dp"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Microsoft Authentication"
                                                    android:textColor="#1F2937"
                                                    android:textSize="14sp" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Secure single sign-on"
                                                    android:textColor="#6B7280"
                                                    android:textSize="12sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/ic_shield"
                                            android:contentDescription="Security Shield"
                                            app:tint="#3B82F6" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="16dp"
                                        android:text="Sign in with your organization's Microsoft account to access all enterprise resources securely."
                                        android:textColor="#6B7280"
                                        android:textSize="14sp" />

                                    <!-- Microsoft Button with glow effect -->
                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp">

                                        <com.google.android.material.button.MaterialButton
                                            android:id="@+id/microsoftLoginButton"
                                            style="@style/MicrosoftButtonStyle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="#0078D4"
                                            android:text="Continue with Microsoft"
                                            android:textColor="#FFFFFF"
                                            android:maxLines="1"
                                            app:icon="@drawable/microsoft_logo"
                                            app:iconTint="@null" />

                                        <ImageView
                                            android:id="@+id/arrowRightIcon"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="end|center_vertical"
                                            android:layout_marginEnd="16dp"
                                            android:src="@drawable/ic_arrow_right"
                                            android:contentDescription="Arrow Right"
                                            app:tint="#FFFFFF" />
                                    </FrameLayout>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Terms and Conditions Section -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/termsCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/microsoftCard"
                                android:layout_marginTop="24dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#E5E7EB"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:text="Terms and Conditions"
                                        android:textColor="#1F2937"
                                        android:textSize="14sp" />


                                    <!-- Custom Checkbox for Terms Agreement -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="12dp"
                                        android:gravity="center_vertical">

                                        <CheckBox
                                            android:id="@+id/termsAgreeCheckbox"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:contentDescription="Agree to Terms and Conditions"
                                            android:minWidth="48dp"
                                            android:minHeight="48dp"
                                            android:padding="4dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="12dp"
                                            android:text="I agree to the Terms of Service and Privacy Policy"
                                            android:textColor="#1F2937"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <!-- Custom Checkbox for Data Consent -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center_vertical">

                                        <CheckBox
                                            android:id="@+id/dataConsentCheckbox"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:contentDescription="Consent to Data Processing"
                                            android:minWidth="48dp"
                                            android:minHeight="48dp"
                                            android:padding="4dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="12dp"
                                            android:text="I consent to the collection and processing of my personal information as described in the Privacy Policy"
                                            android:textColor="#1F2937"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Benefits Section -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/benefitsCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/termsCard"
                                android:layout_marginTop="24dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#E5E7EB"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp"
                                    android:background="#F9FAFB">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="12dp"
                                        android:text="Enterprise Benefits:"
                                        android:textColor="#1F2937"
                                        android:textSize="14sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="8dp"
                                        android:gravity="center_vertical">

                                        <FrameLayout
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/circle_blue">

                                            <ImageView
                                                android:layout_width="12dp"
                                                android:layout_height="12dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_check"
                                                android:contentDescription="Check"
                                                app:tint="#FFFFFF" />
                                        </FrameLayout>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="12dp"
                                            android:text="Single sign-on across all enterprise applications"
                                            android:textColor="#4B5563"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="12dp"
                                        android:gravity="center_vertical">

                                        <FrameLayout
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/circle_blue">

                                            <ImageView
                                                android:layout_width="12dp"
                                                android:layout_height="12dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_check"
                                                android:contentDescription="Check"
                                                app:tint="#FFFFFF" />
                                        </FrameLayout>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="12dp"
                                            android:text="Enhanced security with your organization's policies"
                                            android:textColor="#4B5563"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="12dp"
                                        android:gravity="center_vertical">

                                        <FrameLayout
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/circle_blue">

                                            <ImageView
                                                android:layout_width="12dp"
                                                android:layout_height="12dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_check"
                                                android:contentDescription="Check"
                                                app:tint="#FFFFFF" />
                                        </FrameLayout>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="12dp"
                                            android:text="Seamless access to all company resources"
                                            android:textColor="#4B5563"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </RelativeLayout>

                        <!-- Card Footer -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_light"
                            android:gravity="center"
                            android:paddingVertical="12dp"
                            android:text="Contact your IT administrator for support"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>